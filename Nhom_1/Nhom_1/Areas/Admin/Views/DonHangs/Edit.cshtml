@model Nhom_1.Models.DonHang

@{
    ViewBag.Title = "Sửa đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="page-title">
        <div class="title_left">
            <h3>Sửa đơn hàng</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@Model.Ma_DH</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="">Cài đặt 1</a>
                                <a class="dropdown-item" href="">Cài đặt 2</a>
                            </div>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="form-horizontal">
                        <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" action="@Model.Ma_DH" method="post" enctype='multipart/form-data'>
                            @Html.AntiForgeryToken()
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="maDH">Mã đơn hàng<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" id="maDH" required="required" class="form-control " name="maDH" value="@Model.Ma_DH" readonly>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="tenTK">Tên tài khoản<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" id="tenTK" required="required" class="form-control " name="tenTK" value="@Model.TaiKhoan.Ten_TK" readonly>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="nguoiDat">Người đặt<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" id="nguoiDat" required="required" class="form-control " name="nguoiDat" value="@Model.HoTen_DH" readonly>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="dienThoai">Điện thoại<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" id="dienThoai" required="required" class="form-control " name="dienThoai" value="@Model.DienThoai_DH" readonly>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="email">Email<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" id="email" required="required" class="form-control " name="email" value="@Model.Email_DH" readonly>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="diaChi">Địa chỉ<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" id="diaChi" required="required" class="form-control " name="diaChi" value="@Model.DiaChi_DH" readonly>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="ghiChu">Ghi chú<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" id="ghiChu" required="required" class="form-control " name="ghiChu" value="@Model.GhiChu_DH" readonly>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="ngayDat">Ngày đặt<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" id="ngayDat" required="required" class="form-control " name="ngayDat" value="@Model.NgayDat_DH" readonly>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="trangThai">Trạng thái<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6 ">
                                    @if (Model.TrangThai_DH == 1)
                                    {
                                        <select name="trangThai" class="form-control ">
                                            <option value="1" selected>Đã thanh toán</option>
                                            <option value="0">Chưa thanh toán</option>
                                        </select>
                                    }
                                    else
                                    {
                                        <select name="trangThai" class="form-control ">
                                            <option value="1">Đã thanh toán</option>
                                            <option value="0" selected>Chưa thanh toán</option>
                                        </select>
                                    }
                                </div>
                            </div>
                            <br/>
                            <button style="margin-left: 470px" class="btn btn-success" type="submit">Lưu</button>
                            <a href="@Url.Action("Index")" style="margin-left: 70px" class="btn btn-primary">Trở về</a>
                        </form>
                    </div>
                    @if (ViewBag.Error != null)
                    {
                        <br/>
                        <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
