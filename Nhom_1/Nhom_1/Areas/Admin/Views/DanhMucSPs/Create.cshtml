@model Nhom_1.Models.DanhMucSP

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="page-title">
        <div class="title_left">
            <h3>Tạo mới</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Danh mục</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="">Cài đặt 1</a>
                                <a class="dropdown-item" href="">Cài đặt 2</a>
                            </div>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="form-horizontal">
                        <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" method="post" enctype='multipart/form-data'>
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-form-label col-md-3 col-sm-3 label-align" for="tenDM">Tên danh mục<span class="required">*</span></label>
                                    <div class="col-md-6 col-sm-6 ">
                                        <input type="text" id="first-name" required="required" class="form-control" name="tenDM">
                                    </div>
                                </div>
                                <div class="uploadimage">
                                    <div class="col-md-10">
                                        <img id="outputIcon" class="img-rounded" alt="Icon" width="200" height="200" src="~/wwwroot/images/icons/no-image-news.png"/>
                                        <p><label for="ufile" style="cursor: pointer">Chọn icon<span class="required">*</span></label></p>
                                        <input name="icon" id="ufile" type="file" style="display: none" onchange="loadFile(event)"/>
                                    </div>
                                </div>
                                <div class="uploadimage">
                                    <div class="col-md-10">
                                        <img id="outputImage" class="img-rounded" alt="Ảnh" width="200" height="330" src="~/wwwroot/images/icons/no-image-news.png"/>
                                        <p><label for="ufile1" style="cursor: pointer">Chọn ảnh<span class="required">*</span></label></p>
                                        <input name="anh" id="ufile1" type="file" style="display: none" onchange="loadFile1(event)"/>
                                    </div>
                                </div>
                                <br/>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button style="margin-left: 470px" class="btn btn-success" type="submit">Tạo</button>
                                        <a href="@Url.Action("Index")" style="margin-left: 70px" class="btn btn-primary">Trở về</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    @if (ViewBag.Error != null)
                    {
                        <br/>
                        <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .uploadimage {
        display: inline-block;
        text-align: center;
        margin: 20px -200px 0px 320px;
    }
</style>
<script>
    var loadFile = function (event) {
        var icon = document.getElementById('outputIcon');
        icon.src = URL.createObjectURL(event.target.files[0]);
    };
    var loadFile1 = function (event) {
        var image = document.getElementById('outputImage');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>
