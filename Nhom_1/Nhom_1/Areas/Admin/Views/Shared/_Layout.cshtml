<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>Vũ trụ nước hoa</title>

        <link href="~/Areas/Admin/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="~/Areas/Admin/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
        <link href="~/Areas/Admin/vendors/nprogress/nprogress.css" rel="stylesheet">
        <link href="~/Areas/Admin/vendors/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
        <link href="~/Areas/Admin/build/css/custom.min.css" rel="stylesheet">
        <link href="/Content/PagedList.css" rel="stylesheet" type="text/css"/>
    </head>

    <body class="nav-md">
        <div class="container body">
            <div class="main_container">
                <div class="col-md-3 left_col">
                    <div class="left_col scroll-view">
                        <div class="navbar nav_title" style="border: 0">
                            <a href="@Url.Action("Index", "Home")" class="site_title"><i class="fa fa-paw"></i> <span>Vũ trụ nước hoa</span></a>
                        </div>
                        <div class="clearfix"></div>
                        <!-- menu profile quick info -->
                        <div class="profile clearfix">
                            <div class="profile_pic">
                                <!--
                                { 
                                    string ImagePath = "~/wwwroot/images/icons/" + Session["anh"];
                                }
                                <img src="Url.Content(ImagePath)" alt="Ảnh đại diện" class="img-circle profile_img">
                                -->
                                <img src="~/Areas/Admin/Assets/images/img.jpg" alt="..." class="img-circle profile_img">
                            </div>
                            <div class="profile_info">
                                <span>Xin chào,</span>
                                <h2>@Session["tenTK"]</h2>
                            </div>
                        </div>
                        <!--/menu profile quick info -->
                        <br/>
                        <!-- sidebar menu -->
                        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                            <div class="menu_section">
                                <h3>Quản lý</h3>
                                <ul class="nav side-menu">
                                    <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Trang chủ </a></li>
                                    <li><a href="@Url.Action("Index", "TaiKhoans")"><i class="fa fa-universal-access"></i> Tài khoản </a></li>
                                    <li><a href="@Url.Action("Index", "DonHangs")"><i class="fa fa-edit"></i> Đơn hàng </a></li>
                                    <li>
                                        <a><i class="fa fa-table"></i> Quản lý sản phẩm <span class="fa fa-chevron-down"></span></a>
                                        <ul class="nav child_menu">
                                            <li><a href="@Url.Action("Index", "DanhMucSPs")">Danh mục</a></li>
                                            <li><a href="@Url.Action("Index", "SanPhams")">Sản phẩm</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!--/sidebar menu -->
                        <!--/menu footer buttons -->
                        <div class="sidebar-footer hidden-small">
                            <a data-toggle="tooltip" data-placement="top" title="Cài đặt">
                                <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="Toàn màn hình">
                                <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="Khóa">
                                <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="Đăng xuất" href="@Url.Action("Logout", "Home")">
                                <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                            </a>
                        </div>
                        <!--/menu footer buttons -->
                    </div>
                </div>

                <!-- top navigation -->
                <div class="top_nav">
                    <div class="nav_menu">
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        <nav class="nav navbar-nav">
                            <ul class=" navbar-right">
                                <li class="nav-item dropdown open" style="padding-left: 15px">
                                    <a href="javascript:" class="user-profile dropdown-toggle" aria-haspopup="true" id="navbarDropdown" data-toggle="dropdown" aria-expanded="false">
                                        <img src="~/Areas/Admin/Assets/images/img.jpg" alt="">@Session["tenTK"]
                                    </a>
                                    <div class="dropdown-menu dropdown-usermenu pull-right" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="@Url.Action("Details", "TaiKhoans", new { id = Session["maTK"] })"> Hồ sơ</a>
                                        <a class="dropdown-item" href="@Url.Action("Logout", "Home")"><i class="fa fa-sign-out pull-right"></i> Đăng xuất</a>
                                    </div>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
                <!--/top navigation -->
                @RenderBody()
                <!-- footer content -->
                <footer>
                    <div class="pull-right">
                        Gentelella - Bootstrap Admin Template by <a href="">Colorlib</a>
                    </div>
                    <div class="clearfix"></div>
                </footer>
                <!--/footer content -->
            </div>
        </div>

        <!-- jQuery -->
        <script src="~/Areas/Admin/vendors/jquery/dist/jquery.min.js"></script>
        <!-- Bootstrap -->
        <script src="~/Areas/Admin/vendors/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <!-- FastClick -->
        <script src="~/Areas/Admin/vendors/fastclick/lib/fastclick.js"></script>
        <!-- NProgress -->
        <script src="~/Areas/Admin/vendors/nprogress/nprogress.js"></script>
        <!-- Chart.js -->
        <script src="~/Areas/Admin/vendors/Chart.js/dist/Chart.min.js"></script>
        <!-- jQuery Sparklines -->
        <script src="~/Areas/Admin/vendors/jquery-sparkline/dist/jquery.sparkline.min.js"></script>
        <!-- Flot -->
        <script src="~/Areas/Admin/vendors/Flot/jquery.flot.js"></script>
        <script src="~/Areas/Admin/vendors/Flot/jquery.flot.pie.js"></script>
        <script src="~/Areas/Admin/vendors/Flot/jquery.flot.time.js"></script>
        <script src="~/Areas/Admin/vendors/Flot/jquery.flot.stack.js"></script>
        <script src="~/Areas/Admin/vendors/Flot/jquery.flot.resize.js"></script>
        <!-- Flot plugins -->
        <script src="~/Areas/Admin/vendors/flot.orderbars/js/jquery.flot.orderBars.js"></script>
        <script src="~/Areas/Admin/vendors/flot-spline/js/jquery.flot.spline.min.js"></script>
        <script src="~/Areas/Admin/vendors/flot.curvedlines/curvedLines.js"></script>
        <!-- DateJS -->
        <script src="~/Areas/Admin/vendors/DateJS/build/date.js"></script>
        <!-- bootstrap-daterangepicker -->
        <script src="~/Areas/Admin/vendors/moment/min/moment.min.js"></script>
        <script src="~/Areas/Admin/vendors/bootstrap-daterangepicker/daterangepicker.js"></script>

        <!-- Custom Theme Scripts -->
        <script src="~/Areas/Admin/build/js/custom.min.js"></script>
    </body>
</html>