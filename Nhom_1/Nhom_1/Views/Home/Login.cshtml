@{
    ViewBag.Title = "Đăng nhập";
}

<div class="main">
    <ol itemscope itemtype="http://schema.org/BreadcrumbList">
        <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
            <a itemprop="item" href="@Url.Action("Index", "Home")"><span itemprop="name">Trang chủ</span></a> ❯ <meta itemprop="position" content="1" />
        </li>
        <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
            <a itemprop="item" href="@Url.Action("Login", "Home")"><span itemprop="name">Đăng nhập</span></a><meta itemprop="position" content="2" />
        </li>
    </ol>
    <form action="Login" method="post">
        @Html.AntiForgeryToken()
        <div class="container">
            <h1>Đăng nhập</h1>
            <p>Đăng nhập tài khoản</p>
            <hr>
            <div style="display: flex">
                <div style="float: left; width: 600px">
                    <br />
                    <div class="field">
                        <label for="tenTK" style="margin-left: -300px"><b>Tên đăng nhập</b></label>
                        <br />
                        <input type="text" placeholder="Nhập tên đăng nhập" name="tenTK" required>
                    </div>

                    <div class="field">
                        <label for="matKhauTK" style="margin-left: -337px"><b>Mật khẩu</b></label>
                        <br />
                        <input type="password" placeholder="Nhập mật khẩu" name="matKhauTK" required>
                    </div>
                    <br />
                    <div class="clearfix">
                        <button type="submit" class="signupbtn">Đăng nhập</button>
                    </div>
                </div>
                <div id="anh">
                    <img id="output" class="img-rounded" alt="Ảnh" width="250" height="250" src="~/wwwroot/images/icons/account.png" />&nbsp;<br />&nbsp;
                </div>
            </div>
        </div>
    </form>
    @if (ViewBag.Error != null)
    {
        <br />
        <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
    }
    &nbsp;
</div>
<style type="text/css">
    #anh {
        float: right;
        width: 500px;
        text-align: center;
    }

    .clearfix {
        width: 300px;
        margin-left: 250px;
    }

    form {
        border: 1px solid #ccc;
        margin-bottom: 40px;
        height: 400px;
    }

    .field {
        text-align: center;
        margin-right: -90px;
    }

    #output {
        margin-top: 25px;
    }

    ol[itemtype] {
        margin: -17px 0px 10px 0px;
        padding: 0;
        font-size: 13px;
        border-bottom: 0.5px solid #ccc;
        color: #999;
    }

    .bottommenu {
        top: -88px;
    }

    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    * {
        box-sizing: border-box
    }

    input[type=text], input[type=password] {
        width: 400px;
        padding: 15px;
        margin: 5px 0 22px 0;
        display: inline-block;
        border: none;
        background: #f1f1f1;
    }

    input[type=text]:focus, input[type=password]:focus {
        background-color: #ddd;
        outline: none;
    }

    hr {
        border: 1px solid #f1f1f1;
    }

    button {
        background-color: #04AA6D;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
        opacity: 0.9;
    }

    button:hover {
        opacity: 1;
    }

    .cancelbtn {
        padding: 14px 20px;
        background-color: #f44336;
    }

    .cancelbtn, .signupbtn {
        float: left;
        width: 50%;
    }

    .container {
        padding: 16px;
    }

    .clearfix::after {
        content: "";
        clear: both;
        display: table;
    }
</style>
