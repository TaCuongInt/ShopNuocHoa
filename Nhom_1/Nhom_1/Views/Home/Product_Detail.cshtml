@model Nhom_1.Models.SanPham

@{
    ViewBag.Title = "Chi tiết sản phẩm";
}

<div class="main">
    <ol itemscope itemtype="http://schema.org/BreadcrumbList">
        <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
            <a itemprop="item" href="@Url.Action("Index", "Home")"><span itemprop="name">Trang chủ</span></a> ❯ <meta itemprop="position" content="1" />
        </li>
        <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
            <a itemprop="item" href="@Url.Action("Product_Category", "Home", new { id = Model.Ma_DM })"><span itemprop="name">@Model.DanhMucSP.Ten_DM</span></a> ❯ <meta itemprop="position" content="2" />
        </li>
        <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
            <a itemprop="item" href="@Url.Action("Product_Detail", "Home", new { id = Model.Ma_SP })"><span itemprop="name">@Model.Ten_SP</span></a><meta itemprop="position" content="3" />
        </li>
    </ol>
    <div class="clr10"></div>
    <div class="titleheading">
        <h2>@Model.Ten_SP</h2>
    </div>
    <div class="cgallery">
        <div class="product-container">
            <div class="swiper-wrapper">
                @foreach (var item in Model.Anhs)
                {
                    <div class="swiper-slide">
                        @{
                            string Image_Path = "~/wwwroot/images/products/" + item.DuongDanAnh;
                        }
                        <img src="@Url.Content(Image_Path)" data="@Image_Path" alt="@item.DuongDanAnh" load="lazy" />
                    </div>
                }
            </div>
            <br>
            <div style="text-align:center">
                @foreach (var item in Model.Anhs)
                {
                    <span class="dot"></span>
                }
            </div>
            <div class="swiper-product-pagination"></div>
        </div>
    </div>
    <div class="cinfo procart">
        <p class="category"><span>Mã sản phẩm</span>: <strong>@Model.Ma_SP</strong></p>
        <p class="category"><span>Phân loại</span>: @Model.DanhMucSP.Ten_DM</p>
        <p class="category"><span>Thương hiệu</span>: @Model.ThuongHieu_SP</p>
        <p class="category"><span>Nhóm hương</span>: @Model.MuiHuong_SP</p>
        @if (Model.SoLuong_SP > 0)
        {
            <p class="category"><span>Tình trạng</span>: Còn hàng</p>
        }
        else
        {
            <p class="category"><span>Tình trạng</span>: Hết hàng</p>
        }
        <p class="category"><span>Nồng độ</span>: @Model.NongDo_SP</p>
        <ul class="listprice">
            <li giaban="@Model.GiaBan_SP" name="@Model.DungTich_SP ML">
                <span class="name">@Model.DungTich_SP ML<em>Giao hàng ngay</em></span>
                <p>
                    <input type="number" min="0" value="1" />
                    @{
                        string giaban = Convert.ToDecimal(Model.GiaBan_SP).ToString("###,###,###");
                    }
                    <span class="giaban">@giaban VND</span>
                </p>
            </li>
        </ul>
        <div class="addtocart" id="@Model.Ma_SP" listcart="" reload="1">
            <a href="@Url.Action("Product_To_Cart", "Home", new { id = Model.Ma_SP })" style="color:white"><img src="~/wwwroot/images/icons/cart.png"> Thêm vào giỏ</a>
        </div>
        <div class="addtocart" id="@Model.Ma_SP" listcart="" reload="0">
            <a href="@Url.Action("Product_To_Cart", "Home", new { id = Model.Ma_SP })" style="color:white">Mua ngay</a>
        </div>
        <p><img src="~/wwwroot/images/icons/iconnuochoa2.png" alt="Phương thức thanh toán" /></p>
        <div class="camket">
            <ul>
                <li>
                    <img alt="Nước hoa xách tay chính hãng Mỹ uy tín giá rẻ tại TP.HCM" data="~/wwwroot/images/icons/c2ad1b76e75c1a02434d-1-15923833237.jpg" height="53" src="~/wwwroot/images/icons/c2ad1b76e75c1a02434d-1-15923833237.jpg" width="50" />
                    <p>&nbsp;Cam kết chính hãng 100% - Phát Hiện hàng Fake 1 Đền 10<br />&nbsp;</p>
                </li>
                <li style="text-align: justify">
                    <img alt="Nước hoa xách tay chính hãng Mỹ uy tín giá rẻ tại TP.HCM" data="~/wwwroot/images/icons/32e30439f813054d5c02-15923833522.jpg" height="47" src="~/wwwroot/images/icons/32e30439f813054d5c02-15923833522.png" width="50" />
                    <p style="text-align: left">
                        &nbsp;Giao hàng nhanh chóng tận nơi trên toàn quốc<br />
                        <br />
                        &nbsp;
                    </p>
                </li>
                <li>
                    <img alt="Nước hoa xách tay chính hãng Mỹ uy tín giá rẻ tại TP.HCM" data="~/wwwroot/images/icons/4aff4025bc0f4151181e-2-159238338162.jpg" height="53" src="~/wwwroot/images/icons/4aff4025bc0f4151181e-2-159238338162.png" width="50" />
                    <p>
                        &nbsp;Bảo hành 1 ĐỔI 1 TRONG 2 THÁNG - Đổi/Trả 3 NGÀY<br />
